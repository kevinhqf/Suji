<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#F7F8FB">

    <TextView
        android:id="@+id/numpad_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/numpad_margin_edge"
        android:layout_marginEnd="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="1"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toStartOf="@id/numpad_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numpad_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad_margin_gap"
        android:layout_marginEnd="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="2"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toStartOf="@id/numpad_3"
        app:layout_constraintStart_toEndOf="@id/numpad_1"
        app:layout_constraintTop_toTopOf="@id/numpad_1" />

    <TextView
        android:id="@+id/numpad_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad_margin_gap"
        android:layout_marginEnd="@dimen/numpad_margin_edge"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="3"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toStartOf="@id/numpad_del"
        app:layout_constraintStart_toEndOf="@id/numpad_2"
        app:layout_constraintTop_toTopOf="@id/numpad_1" />

    <ImageView
        android:id="@+id/numpad_del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:src="@mipmap/icon_delete"
        android:background="@drawable/bg_numpad"
        app:layout_constraintBottom_toBottomOf="@id/numpad_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/numpad_3"
        app:layout_constraintTop_toTopOf="@id/numpad_3" />

    <TextView
        android:id="@+id/numpad_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/numpad_margin_edge"
        android:layout_marginEnd="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="4"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toStartOf="@id/numpad_5"
        app:layout_constraintStart_toStartOf="@id/numpad_1"
        app:layout_constraintTop_toBottomOf="@id/numpad_1" />

    <TextView
        android:id="@+id/numpad_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad_margin_gap"
        android:layout_marginEnd="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="5"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toStartOf="@id/numpad_6"
        app:layout_constraintStart_toEndOf="@id/numpad_4"
        app:layout_constraintTop_toTopOf="@id/numpad_4" />

    <TextView
        android:id="@+id/numpad_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="6"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toEndOf="@id/numpad_3"
        app:layout_constraintStart_toEndOf="@id/numpad_5"
        app:layout_constraintTop_toTopOf="@id/numpad_4" />

    <TextView
        android:id="@+id/numpad_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/numpad_margin_edge"
        android:layout_marginEnd="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="7"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toStartOf="@id/numpad_8"
        app:layout_constraintStart_toStartOf="@id/numpad_1"
        app:layout_constraintTop_toBottomOf="@id/numpad_4" />

    <TextView
        android:id="@+id/numpad_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad_margin_gap"
        android:layout_marginEnd="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="8"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toStartOf="@id/numpad_9"
        app:layout_constraintStart_toEndOf="@id/numpad_7"
        app:layout_constraintTop_toTopOf="@id/numpad_7" />

    <TextView
        android:id="@+id/numpad_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad_margin_gap"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="9"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toEndOf="@id/numpad_6"
        app:layout_constraintStart_toEndOf="@id/numpad_8"
        app:layout_constraintTop_toTopOf="@id/numpad_7" />

    <TextView
        android:id="@+id/numpad_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/numpad_margin_edge"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:text="0"
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toEndOf="@id/numpad_8"
        app:layout_constraintStart_toStartOf="@id/numpad_7"
        app:layout_constraintTop_toBottomOf="@id/numpad_8" />

    <TextView
        android:paddingTop="@dimen/numpad_padding_text"
        android:paddingBottom="@dimen/numpad_padding_text"
        android:id="@+id/numpad_dot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_numpad"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:text="."
        android:textColor="@color/numpad_text_color"
        android:textSize="@dimen/numpad_text_size"
        app:layout_constraintEnd_toEndOf="@id/numpad_9"
        app:layout_constraintStart_toStartOf="@id/numpad_9"
        app:layout_constraintTop_toTopOf="@id/numpad_0" />
    <ImageView
        android:layout_marginStart="@dimen/numpad_margin_gap"
        android:background="#1D3552"
        android:padding="40dp"
        android:src="@mipmap/icon_return"
        app:layout_constraintTop_toTopOf="@id/numpad_6"
        app:layout_constraintStart_toEndOf="@id/numpad_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>