<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_main_top">

    <TextView
        android:id="@+id/om_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="今天"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/om_iv_add"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_addition_icon"
        android:padding="5dp"
        android:src="@mipmap/icon_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/om_tv_title"
        app:layout_constraintBottom_toBottomOf="@id/om_tv_title"/>

    <TextView
        android:id="@+id/om_tv_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:text="￥1,234,567,890.13"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/om_tv_title" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/om_iv_add"
        app:layout_constraintStart_toStartOf="@id/om_tv_title"
        app:layout_constraintTop_toBottomOf="@id/om_tv_total">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/om_expense_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="@id/om_split"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/om_iv_expense"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_arrow_green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/om_tv_expense_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支出"
                    android:textColor="#95FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@id/om_iv_expense"
                    app:layout_constraintStart_toEndOf="@id/om_iv_expense"
                    app:layout_constraintTop_toTopOf="@id/om_iv_expense" />
            </LinearLayout>


            <TextView
                android:id="@+id/om_tv_expense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥0.00"
                android:fontFamily="@font/exo_2_bold"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                app:layout_constraintEnd_toStartOf="@id/om_split"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/om_expense_label" />

            <FrameLayout
                android:id="@+id/om_split"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#97FBFBFB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/om_tv_income"
                app:layout_constraintStart_toEndOf="@id/om_tv_expense"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/om_income_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/om_split"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/om_iv_income"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_arrow_red" />

                <TextView
                    android:id="@+id/om_tv_income_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收入"
                    android:textColor="#95FFFFFF"/>
            </LinearLayout>

            <TextView
                android:id="@+id/om_tv_income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥0.00"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                android:fontFamily="@font/exo_2_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/om_split"
                app:layout_constraintTop_toBottomOf="@id/om_income_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>