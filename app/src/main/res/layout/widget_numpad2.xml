<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_numpad2">

    <TextView
        android:id="@+id/numpad2_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad2_margin"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="1"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toStartOf="@id/numpad2_2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad2_inner_margin"
        android:layout_marginEnd="@dimen/numpad2_inner_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="2"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toStartOf="@id/numpad2_3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/numpad2_1"
        app:layout_constraintTop_toTopOf="@id/numpad2_1" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/numpad2_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="3"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/numpad2_2"
        app:layout_constraintTop_toTopOf="@id/numpad2_1" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad2_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="4"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toStartOf="@id/numpad2_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numpad2_1" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad2_inner_margin"
        android:layout_marginEnd="@dimen/numpad2_inner_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"

        android:paddingBottom="@dimen/numpad2_padding"
        android:text="5"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toStartOf="@id/numpad2_6"
        app:layout_constraintStart_toEndOf="@id/numpad2_4"
        app:layout_constraintTop_toTopOf="@id/numpad2_4" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/numpad2_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="6"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/numpad2_5"
        app:layout_constraintTop_toTopOf="@id/numpad2_4" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad2_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="7"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toStartOf="@id/numpad2_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numpad2_4" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/numpad2_inner_margin"
        android:layout_marginEnd="@dimen/numpad2_inner_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"

        android:paddingBottom="@dimen/numpad2_padding"
        android:text="8"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toStartOf="@id/numpad2_9"
        app:layout_constraintStart_toEndOf="@id/numpad2_7"
        app:layout_constraintTop_toTopOf="@id/numpad2_7" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/numpad2_margin"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="9"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/numpad2_8"
        app:layout_constraintTop_toTopOf="@id/numpad2_7" />

    <TextView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/exo_2_bold"
        android:gravity="center"
        android:paddingTop="@dimen/numpad2_padding"
        android:paddingBottom="@dimen/numpad2_padding"
        android:text="0"
        android:textColor="@color/numpad2_num"
        android:textSize="@dimen/numpad2_num_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/numpad2_8"
        app:layout_constraintStart_toStartOf="@id/numpad2_8"
        app:layout_constraintTop_toBottomOf="@id/numpad2_8" />

    <ImageView
        android:background="@drawable/bg_numpad2_text"
        android:clickable="true"
        android:id="@+id/numpad2_del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:src="@mipmap/icon_delete"
        app:layout_constraintBottom_toBottomOf="@id/numpad2_0"
        app:layout_constraintEnd_toEndOf="@id/numpad2_9"
        app:layout_constraintStart_toStartOf="@id/numpad2_9"
        app:layout_constraintTop_toTopOf="@id/numpad2_0" />

</androidx.constraintlayout.widget.ConstraintLayout>