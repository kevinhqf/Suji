<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:id="@+id/it_bg_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_datatype_selected"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/it_iv_icon"
        app:layout_constraintEnd_toEndOf="@id/it_iv_icon"
        app:layout_constraintStart_toStartOf="@id/it_iv_icon"
        app:layout_constraintTop_toTopOf="@id/it_iv_icon" />

    <ImageView
        android:id="@+id/it_iv_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/it_tv_title"
        app:layout_constraintStart_toStartOf="@id/it_tv_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/it_tv_title"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:text="停车费"
        android:textColor="@color/primary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/it_iv_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>